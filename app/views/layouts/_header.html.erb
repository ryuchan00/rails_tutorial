<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "sample app", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Help", help_path %></li>
        <% if logged_in? %>
            <li class="search-form">
              <%= form_with url: users_path, :method => 'get', local: true, class: "input-group" do %>
                  <%= text_field_tag :search, '', placeholder: "ユーザー名" %>
                  <span class="input-group-btn">
                  <%= button_tag(type: "submit", name: nil, class: "btn btn-default btn-sm") do %>
                      <%= content_tag :span, "", class: "glyphicon glyphicon-search" %>
                  <% end %>
                  </span>
              <% end %>
            </li>
            <li class="search-form">
              <%= form_with url: microposts_search_path, :method => 'get', local: true, class: "input-group" do %>
                  <%= text_field_tag :search, '', placeholder: "tweetを探す" %>
                  <span class="input-group-btn">
                  <%= button_tag(type: "submit", name: nil, class: "btn btn-default btn-sm") do %>
                      <%= content_tag :span, "", class: "glyphicon glyphicon-search" %>
                  <% end %>
                  </span>
              <% end %>
            </li>
            <li><%= link_to "Users", users_path %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Log out", logout_path, method: :delete %>
                </li>
              </ul>
            </li>
        <% else %>
            <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
